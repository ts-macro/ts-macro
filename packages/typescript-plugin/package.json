    ".": {
      "types": "./src/index.d.ts",
      "tsm-dev": "./src/index.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "DEV=true tsdown",
    "build": "tsdown",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ts-macro/language-plugin": "workspace:*",
    "@volar/typescript": "catalog:"
  }
