{
  "name": "vscode-ts-macro",
  "version": "0.0.3",
  "description": "Define TS(X) macro powered by Volar.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ts-macro/ts-macro.git",
    "directory": "packages/vscode"
  },
  "categories": [
    "Programming Languages"
  ],
  "displayName": "TS Macro",
  "author": "zhiyuanzmj",
  "publisher": "zhiyuanzmj",
  "main": "./dist/client.js",
  "scripts": {
    "build": "node scripts/build -- --minify",
    "watch": "npm run build -- --watch",
    "typecheck": "tsc --noEmit",
    "pack": "npm run build && vsce package --pre-release --no-dependencies",
    "release": "npm run build && vsce publish --pre-release --no-dependencies"
  },
  "dependencies": {
    "@ts-macro/language-server": "workspace:*",
    "@ts-macro/typescript-plugin": "workspace:*",
    "@volar/language-server": "~2.4.0",
    "@volar/typescript": "~2.4.0",
    "@volar/vscode": "~2.4.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "esbuild": "latest",
    "vsce": "latest"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "icon": "assets/logo.png",
  "contributes": {
    "grammars": [
      {
        "scopeName": "source.define-style-inject",
        "path": "./syntaxes/define-style-inject.json",
        "embeddedLanguages": {
          "source.css": "css",
          "source.css.scss": "scss",
          "source.css.less": "less",
          "source.css.postcss": "postcss",
          "source.sass": "sass",
          "source.stylus": "stylus"
        },
        "injectTo": [
          "source.ts",
          "source.tsx"
        ]
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "@ts-macro/typescript-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ]
  }
}
