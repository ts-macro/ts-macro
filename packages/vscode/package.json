{
	"name": "vscode-ts-macros",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/vue-macros/ts-macros.git",
		"directory": "packages/vscode"
	},
	"categories": [
		"Programming Languages"
	],
	"displayName": "TS Macros",
	"description": "Define TS|TSX macro powered by Volar.js",
	"author": "zhiyuanzmj",
	"publisher": "zhiyuanzmj",
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:typescriptreact"
	],
	"main": "./dist/client.js",
	"icon": "assets/logo.png",
	"contributes": {
		"grammars": [
			{
        "scopeName": "source.tsm-inject",
        "path": "./syntaxes/tsm-inject.json",
        "embeddedLanguages": {
          "source.css": "css",
          "source.css.scss": "scss",
          "source.css.less": "less",
          "source.css.postcss": "postcss",
          "source.sass": "sass",
          "source.stylus": "stylus"
        },
        "injectTo": [
          "source.ts",
					"source.tsx"
        ]
      }
		]
	},
	"scripts": {
		"build": "node scripts/build -- --minify",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package --pre-release",
		"release": "npm run build && vsce publish --pre-release"
	},
	"devDependencies": {
		"@tsm/language-server": "workspace:*",
		"@types/vscode": "^1.82.0",
		"@volar/language-server": "~2.4.0",
		"@volar/vscode": "~2.4.0",
		"esbuild": "latest",
		"vsce": "latest"
	}
}
