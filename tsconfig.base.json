{
  "compilerOptions": {
    "composite": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "baseUrl": "./",
    "module": "Node16",
    "paths": {
      "@tsm/language-server": ["packages/language-server/src"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true
  }
}
